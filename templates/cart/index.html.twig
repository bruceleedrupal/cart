{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <div class="row mb-3">
        <div class="col-6">
            <h2>Your cart: {{ cartItemsCount }} items</h2>
        </div>
        <div class="col-6">

        </div>
    </div>

<div class="row">
    <div class="col-9">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th></th>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
            </thead>
            <tbody>
            {% if cartItems %}
                {% for cartItem in cartItems %}
                    <tr class="cart-item" data-product-id="{{ cartItem.productId }}" data-price="{{ cartItem.productPrice }}" data-quantity="{{ cartItem.quantity }}" data-total="{{ cartItem.total }}">
                        <td>

                                <a class="btn btn-sm font-weight-bold pt-0 pb-0 text-danger" href="{{ path('cart_remove_item', {'productId': cartItem.productId}) }}">x</a>                          
                                <img src="{{ cartItem.productImage }}" height="40"/>
                            </form>
                        </td>
                        <td>{{ cartItem.productName }}</td>
                        <td>${{ cartItem.productPrice }}</td>
                        <td><input type="number" min="1" value="{{ cartItem.quantity }}" class="text-right"></td>
                        <td>${{ cartItem.total }}</td>
                    </tr>
                {% endfor %}
            {% else %}
                No items
            {% endif %}
            </tbody>
        </table>

        <div class="row">
            <div class="col-8">
                {% if cartItemsCount > 0 %}
                    <form method="post" action="{{ path('cart_empty_cart') }}">
                        <button type="submit" class="btn btn-danger btn-sm">Emtpy cart</button>
                    </form>
                {% endif %}
            </div>
            <div class="col-4">
                <form id="update-cart-form" method="post" action="{{ path('cart_update') }}">
                    <button type="submit" class="btn btn-sm btn-block btn-success float-right">Update cart</button>
                    <input type="hidden" id="cart-items-json" name="cart-items-json" value="{{ cartItemsJson }}" />
                </form>
            </div>
        </div>
    </div>
    <div class="col-3">
        <div id="cart-sidebar">
            <div class="row mb-2">
                <div class="col-7">
                    Subtotal ({{ cartItemsCount }} items
                </div>
                <div class="col-5 text-right">
                    ${{ cartSubtotal }}
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-7">
                    Delivery
                </div>
                <div class="col-5 text-right">
                    Free
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-7">
                    Taxes & fess
                </div>
                <div class="col-5 text-right">
                    ${{ taxesTotal }}
                </div>
            </div>
            <hr />

            <div class="row mb-2">
                <div class="col-7">
                    Total
                </div>
                <div class="col-5 text-right">
                    <b>${{ cartTotal }}</b>
                </div>
            </div>

            <a href="#" class="btn btn-block btn-primary">Check Out</a>
        </div>
    </div>
</div>
{% endblock %}
