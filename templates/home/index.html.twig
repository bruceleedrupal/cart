{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Product list</h2>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Product</th>
                            <th>Price</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td><img src="{{ product.image }}" height="40"/></td>
                            <td>{{ product.name }}</td>
                            <td>${{ product.price }}</td>
                            <td>
                                <form method="post" action="{{ path('cart_add_item', {'productId': product.id}) }}">
                                    <input type="hidden" id="add-item-id" name="add-item-id" value="{{ product.id }}" />
                                    <button type="submit" class="btn btn-sm btn-success">Add to cart</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}